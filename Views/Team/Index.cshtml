@model IEnumerable<ProjectManagementSystem.Models.Team>

@{
    ViewData["Title"] = "Teams";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Teams</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Create New Team
        </a>
    </div>

    <div class="row g-4">
        @foreach (var team in Model)
        {
            <div class="col-md-6 col-lg-4">
                <div class="card h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start mb-3">
                            <div>
                                <h5 class="card-title mb-1">@team.Name</h5>
                                <p class="text-muted small mb-0">Created by @team.CreatedBy.FirstName @team.CreatedBy.LastName</p>
                            </div>
                            <a asp-action="Edit" asp-route-id="@team.Id" class="btn btn-sm btn-outline-primary">
                                <i class="fas fa-edit"></i>
                            </a>
                        </div>

                        <p class="card-text">@team.Description</p>

                        <div class="mt-3">
                            <h6 class="mb-2">Team Members (@team.TeamMembers.Count)</h6>
                            <div class="d-flex flex-wrap gap-2">
                                @foreach (var member in team.TeamMembers)
                                {
                                    <div class="badge bg-light text-dark">
                                        @member.User.FirstName @member.User.LastName
                                        <span class="ms-1 text-muted">(@member.Role)</span>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div> 